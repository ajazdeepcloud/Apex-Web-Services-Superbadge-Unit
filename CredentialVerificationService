Global Class CredentialVerificationService{
    Webservice Static String verifyCredential(String lName, String certName){
        List<Contact_Certification__c> certLst = [select id, isActive__c from Contact_Certification__c where name=:certName and Contact__r.LastName = :lName];
        return certLst.isEmpty()? 'No record found' : (certLst[0].isActive__c ? 'Valid' : 'Needs Renewal');
    }
}
